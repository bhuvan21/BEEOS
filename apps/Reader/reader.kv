<BooksScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    ScrollView:
        size_hint_y: None
        size: 480, 800
        GridLayout:
            size_hint_y:None
            height: 200
            cols:2
            rows:2
            padding: 20
            spacing: 40
            
<ReadScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        AnchorLayout:
            size_hint : 1, .9

            ScrollView:
                size_hint : .9, .9
                Label:
                    size_hint : 1, None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    color: 0, 0, 0, 1
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, .1
            Label:
                size_hint : 0.4, 1
                color: 0, 0, 0, 1
            Button:
                size_hint : 0.3, 1
                text: "<"
                color: 0, 0, 0, 1
            Button:
                size_hint : 0.3, 1
                text: ">"
                color: 0, 0, 0, 1

            