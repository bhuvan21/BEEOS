<MainScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        Label:
            text: ""
            size: self.texture_size
            size_hint: None, .1
        Label:
            text: "LOADING"
            text_size: root.width, None
            font_size: "20sp"
            size: self.texture_size
            size_hint: None, .1
            halign: "center"
            color: .5, .5, .5, 1
        Image:
            allow_stretch: 1
            keep_ratio: 1
            anim_delay:1/24
        Label:
            text: ""
            size: self.texture_size
            size_hint: None, .1

<AllAppsScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    ScrollView:
        size_hint_y: None
        size: 480, 800
        GridLayout:
            size_hint_y:None
            height: 200
            cols:2
            rows:2
            padding: 20
            spacing: 40
            
<DetailAppScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        
        size_hint: 1, 1
        BoxLayout:
            size_hint: 1.5, .3 
            orientation: "horizontal"
            AsyncImage:
                size_hint: .4, None
                
            BoxLayout:
                size_hint: .6, None
                orientation: "vertical"
                Label:
                    color: 0, 0, 0, 1
                    size_hint: None, .3
                Label:
                    color: 0, 0, 0, 1
                    size_hint: None, .3
                Label:
                    color: 0, 0, 0, 1
                    size_hint: None, .3
        Label:
            size_hint: 1, .3
        Button:
            size_hint: 1, .3
            text: "Install"